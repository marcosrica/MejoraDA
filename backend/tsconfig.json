{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Output */
    "sourceMap": true,

    /* Interop & Module Resolution */
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
